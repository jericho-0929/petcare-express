<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingVertical="128dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/feature_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pet_food_portioning"
        android:textSize="20sp"
        android:layout_marginVertical="40dp"
        />
    <TextView
        android:id="@+id/pet_food_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pet_food_brand" />
    <TextView
        android:id="@+id/pet_food_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pet_food_type" />


    <LinearLayout
        android:id="@+id/weight_output_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginVertical="20dp">
        <TextView
            android:id="@+id/serving_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grams"
            />
        <TextView
            android:id="@+id/serving_per_meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grams_per_meal"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pet_weight_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pet_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/pet_weight_kg"
            />

        <EditText
            android:id="@+id/input_pet_weight"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:hint="@string/enter_pet_weight_in_kilograms"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:text="@string/_2"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/meal_per_day_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/meal_per_day_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/amount_of_meals_per_day"
            />

        <EditText
            android:id="@+id/input_meal_amount"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:hint="@string/enter_amount_of_meals_per_day"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:text="@string/_2"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/button_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/select_food_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            tools:ignore="ButtonStyle"
            android:text="@string/select_food"
            />
        <Button
            android:id="@+id/add_item_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            tools:ignore="ButtonStyle"
            android:text="@string/add_item"
            />
    </LinearLayout>

</LinearLayout>